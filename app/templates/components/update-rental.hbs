{{#if updateRentalForm}}
    <h1>Update Rental</h1>
    <div>
     <form>
       <div class="form-group">
         <label for="owner">Owner</label>
         {{input value=owner id="owner"}}
       </div>

       <div class="form-group">
         <label for="type">Type</label>
         {{input value=type id="type"}}
       </div>

       <div class="form-group">
         <label for="city">City</label>
         {{input value=city id="city"}}
       </div>

       <div class="form-group">
         <label for="bedrooms">Number of Bedrooms</label>
         {{input value=bedrooms id="bedrooms"}}
       </div>

       <div class="form-group">
         <label for="image">Image URL</label>
         {{input value=image id="image"}}
       </div>

       <button {{action 'updateRental' rental}}>Update</button>
     </form>
    </div>
 {{else}}
    <button {{action 'updateRentalForm'}}>Update Rental</button>
{{/if}}
